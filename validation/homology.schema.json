{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
        "filters": {
            "enum": ["all", "none", "exon_len", "intron_len", "internal_stop", "aa_len", "splicing"]
        }
    },
    "type": "object",
    "properties": {
        "ei_homology.genome_to_annotate": {
            "type": "string"
        },
        "ei_homology.annotations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "genome": {
                        "type": "string"
                    },
                    "annotation_gff": {
                        "type": "string"
                    }
                },
                "required": ["genome", "annotation_gff"]
            }
        },
        "ei_homology.AlignProteins.filters": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/filters"
            }
        },
        "ei_homology.AlignProteins.species": {
            "type": "string"
        },
        "ei_homology.PrepareAnnotations.filters": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/filters"
            }
        },
        "ei_homology.AlignProteins.min_identity": {
            "type": "integer"
        },
        "ei_homology.AlignProteins.min_coverage": {
            "type": "integer"
        },
        "ei_homology.PrepareAnnotations.min_cds_len": {
            "type": "integer"
        }
    },
    "required": ["ei_homology.genome_to_annotate", "ei_homology.annotations", "ei_homology.AlignProteins.species"]
}