# Scallop - 0.10.5
wget https://github.com/Kingsford-Group/scallop/archive/v0.10.5.tar.gz
tar xf v0.10.5.tar.gz
cd scallop-0.10.5
autoreconf -i
./configure
make -j4
make install
cd /opt/software/
